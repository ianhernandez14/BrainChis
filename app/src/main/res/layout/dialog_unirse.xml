<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_unirse_partida"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtInfoReconexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="#8A0C0C"
            android:text="@string/nota_info_reconexion"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_recientes"
            android:textColor="#718096"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ip_servidor"
            android:textColor="#718096"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etIpServidor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/hint_ejemplo_ip"
            android:inputType="number|textUri"
            android:digits="0123456789."
            android:paddingHorizontal="16dp"
            android:textColor="#2D3748"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConectarServer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/boton_conectar"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#48BB78"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>