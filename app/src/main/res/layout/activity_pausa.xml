<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/panelPausa"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="16dp"
        card_view:cardBackgroundColor="#FFFFFF"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <!-- Icono y Título -->
            <TextView
                android:id="@+id/txtTituloPausa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pausa_titulo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:letterSpacing="0.02"/>

            <!-- Botón Reanudar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReanudar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/pausa_boton_reanudar"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="#667EEA"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:letterSpacing="0.01"/>

            <!-- Botón Reiniciar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReiniciar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/pausa_boton_reiniciar"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFA000"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:letterSpacing="0.01"/>

            <!-- Botón Volver al Menú -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMenuPrincipal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/pausa_boton_menu"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="#718096"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:elevation="4dp"
                android:letterSpacing="0.01"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>