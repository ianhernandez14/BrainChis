<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtTituloLobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sala de Espera (Host)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/txtIpHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.X.X"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/btnCopiarIp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_copiar"
                app:tint="#000000"
                android:background="@color/white"
                android:contentDescription="Copiar IP"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerJugadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rellenar con CPUs:"
            android:textStyle="bold"
            android:textColor="#4A5568"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgCPUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb0CPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginEnd="16dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rb1CPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 CPU"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/rb2CPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 CPUs"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/rb3CPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 CPUs"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIniciarJuegoHost"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="INICIAR PARTIDA"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#48BB78"/>

        <Button
            android:id="@+id/btnCancelarLobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar Sala"
            android:background="@android:color/transparent"
            android:textColor="#E53E3E"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>