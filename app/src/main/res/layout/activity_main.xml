<?xml version="1.0" encoding="utf-8"?>
<!-- Pantalla principal del menú -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patron_fondo"
    android:padding="20dp"
    android:id="@+id/main">

    <!-- Logo principal -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <!-- Logo letras -->
    <ImageView
        android:id="@+id/imgLogoLetras"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logoletras"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tarjeta de botones principales -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imgLogoLetras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Botones principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCrear"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="@string/crear"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#667EEA"
                    android:layout_marginEnd="8dp"
                    android:elevation="3dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUnirse"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="@string/unirse"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#48BB78"
                    android:layout_marginStart="8dp"
                    android:elevation="3dp" />
            </LinearLayout>

            <!-- Botón de ver puntajes -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPuntajes"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="@string/ver_puntajes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#ED8936"
                app:cornerRadius="12dp"
                android:letterSpacing="0.02"
                android:elevation="2dp"
                android:paddingHorizontal="32dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
