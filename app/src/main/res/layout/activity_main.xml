<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageView
        android:id="@+id/imgLogoLetras"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/logoletras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="145dp"
        android:layout_height="105dp"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        android:text="@string/crear"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoLetras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnUnirse"/>

    <Button
        android:id="@+id/btnUnirse"
        android:layout_width="145dp"
        android:layout_height="105dp"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        android:text="@string/unirse"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoLetras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCrear"/>

    <Button
        android:id="@+id/btnPuntajes"
        android:text="@string/ver_puntajes"
        android:textSize="20sp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
