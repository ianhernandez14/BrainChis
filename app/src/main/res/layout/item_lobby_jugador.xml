<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/fondo_input">

    <ImageView
        android:id="@+id/imgFichaLobby"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ficha_roja"
        android:layout_marginEnd="12dp"/>

    <EditText
        android:id="@+id/etNombreLobby"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/nombre_jugador_rojo_default"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:singleLine="true"
        android:imeOptions="actionDone"/>


    <ImageView
        android:id="@+id/imgEditarNombre"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_editar"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="visible"/>

</LinearLayout>