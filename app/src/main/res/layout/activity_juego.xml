<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patron_fondo"
    android:id="@+id/main"
    android:keepScreenOn="true">

    <com.proyectofinal.brainchis.Tablero
        android:id="@+id/tablero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtPowerUpActivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_up_salida_maestra"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/fondo_circular_reloj"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/texto_temporizador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Dado rojo (jugador superior izquierdo) -->
    <ImageView
        android:id="@+id/dado_rojo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/dado_signo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tablero"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/dado_powerup_rojo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/powerup"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/dado_rojo"
        app:layout_constraintBottom_toTopOf="@id/tablero"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="18dp"/>

    <!-- Dado verde (jugador superior derecho) -->
    <ImageView
        android:id="@+id/dado_verde"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/dado_signo"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tablero"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/dado_powerup_verde"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/powerup"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/dado_verde"
        app:layout_constraintBottom_toTopOf="@id/tablero"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"/>

    <!-- Dado azul (jugador inferior izquierdo) -->
    <ImageView
        android:id="@+id/dado_azul"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/dado_signo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tablero"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/dado_powerup_azul"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/powerup"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/dado_azul"
        app:layout_constraintTop_toBottomOf="@id/tablero"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"/>

    <!-- Dado amarillo (jugador inferior derecho) -->
    <ImageView
        android:id="@+id/dado_amarillo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/dado_signo"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tablero"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/dado_powerup_amarillo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/powerup"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/dado_amarillo"
        app:layout_constraintTop_toBottomOf="@id/tablero"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="18dp"/>

    <ImageButton
        android:id="@+id/btnSonido"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_volumen"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnPausa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_pausa"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/btnSonido"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <include layout="@layout/layout_pausa"/>
    <include layout="@layout/layout_victoria"/>
    <include layout="@layout/layout_seleccion_powerup"/>
    <include layout="@layout/layout_preguntas"/>
    <include layout="@layout/layout_decision_bonificacion"/>

    <TextView
        android:id="@+id/texto_temporizador"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/fondo_circular_reloj"
        android:gravity="center"
        android:text="@string/temporizador_inicial"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>