<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDecisionBonificacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:visibility="gone"
    android:elevation="28dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="16dp"
        card_view:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_marginBottom="16dp"
                app:tint="#F6E05E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡ZONA SEGURA!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Quieres responder una pregunta para ganar un TURNO EXTRA?"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#718096"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAceptarReto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sí, me arriesgo"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="#48BB78"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRechazarReto"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="No, terminar turno"
                android:textColor="#E53E3E"
                app:strokeColor="#E53E3E"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>