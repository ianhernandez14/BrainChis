<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar Partida"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu Nombre:"
            android:textColor="#718096"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etNombreJugador"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="Escribe tu nombre"
            android:inputType="textPersonName"
            android:paddingHorizontal="12dp"
            android:text="Jugador 1"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona cantidad de jugadores:"
            android:textColor="#718096"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupJugadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio2Jugadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18sp"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/radio3Jugadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/radio4Jugadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="18sp"
                android:checked="true"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkSoloIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo Espectador (Todos son CPU)"
            android:textColor="#718096"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIniciarPartida"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Â¡COMENZAR!"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#667EEA"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>